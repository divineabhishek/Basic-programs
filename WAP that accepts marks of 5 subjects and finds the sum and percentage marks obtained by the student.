#include <math.h>

int main(){
int p , c , m , cs , b , sum , percentage;
clrscr();
        printf("Enter the marks of Physics:\n");
        scanf("%d" , &p);
        printf("Enter the marks of Chemistry:\n");
        scanf("%d" , &c);
        printf("Enter the marks of Mathematics:\n");
        scanf("%d" , &m);
        printf("Enter the marks of Computer Science:\n");
        scanf("%d" , &cs);
        printf("Enter the marks of Biology:\n");
        scanf("%d" , &b);

sum  = p + c + m + cs + b ;
printf("The sum of marks of the five subjects are: %d.\n",sum);

        percentage = sum / 5;
        printf("Percentage is %d.", percentage);
